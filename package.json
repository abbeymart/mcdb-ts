  "devDependencies": {
    "@mconnect/mctest": "^0.2.7",
    "@types/mongodb": "^3.6.3",
    "@types/node": "^14.14.13",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "@mconnect/mcresponse": "^0.2.0",
